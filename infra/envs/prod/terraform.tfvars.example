# Copy this file to terraform.tfvars and fill in the values

aws_region   = "ap-northeast-2"
project_name = "klosetlab"
domain_name  = "klosetlab.site"
key_name     = "klosetlab-key"
db_password  = "your-secure-password-here"

bastion_allowed_cidrs = [
  # Replace with your team's IP addresses
  # "203.0.113.0/32"
]

# ACM certificate ARN for ALB (ap-northeast-2)
alb_certificate_arn = "arn:aws:acm:ap-northeast-2:ACCOUNT_ID:certificate/CERTIFICATE_ID"

# ACM certificate ARN for CloudFront (must be us-east-1)
cloudfront_certificate_arn = "arn:aws:acm:us-east-1:ACCOUNT_ID:certificate/CERTIFICATE_ID"
